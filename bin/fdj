#FDJ_HOME=$(readlink -e "$0" | xargs dirname | xargs dirname)

if ((!$#)); then
  echo -e "\e[1;31m-E-\e[0m Missing subcommand!"
  exit 1
fi

sub=$1
shift

if [[ $(type -t _$sub) == function ]]; then
  _$sub "$@"
else
  echo -e "\e[1;31m-E-\e[0m Unknown subcommand '\e[1m$sub\e[0m'"
fi
